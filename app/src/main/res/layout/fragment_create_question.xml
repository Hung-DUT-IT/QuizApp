<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="#242A42"
        tools:context=".View.HomeFragment">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="380dp"
            android:layout_height="545dp"
            android:layout_gravity="center|bottom"
            android:layout_margin="30dp"
            app:cardBackgroundColor="#CBDCE6"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:hint="Enter your question"
                    android:textColorHint="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textPassword"
                        android:maxLines="1" />
                </com.google.android.material.textfield.TextInputLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="288dp"
                    android:layout_margin="18dp"
                    android:columnCount="2"
                    android:rowCount="2">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#CBDCE6"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:strokeWidth="2dp">

                        <RadioButton
                            android:id="@+id/radio_btn_a"
                            android:layout_width="31dp"
                            android:layout_height="35dp"
                            android:layout_gravity="end|top"
                            android:layout_margin="2dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_add_answer_a"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/add"
                                android:text="A" />

                            <TextView
                                android:id="@+id/tv_answer_a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal|bottom"
                                android:text="Add Answer"
                                android:textColor="#6A5AE0"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center|bottom"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#CBDCE6"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:strokeWidth="2dp">

                        <RadioButton
                            android:id="@+id/radio_btn_b"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right|top"
                            android:layout_margin="2dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_add_answer_b"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/add"
                                android:text="B" />

                            <TextView
                                android:id="@+id/tv_answer_b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal|bottom"
                                android:text="Add Answer"
                                android:textColor="#6A5AE0"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center|bottom"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#CBDCE6"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:strokeWidth="2dp">

                        <RadioButton
                            android:id="@+id/radio_btn_c"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right|top"
                            android:layout_margin="2dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_add_answer_c"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/add"
                                android:text="C" />

                            <TextView
                                android:id="@+id/tv_answer_c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal|bottom"
                                android:text="Add Answer"
                                android:textColor="#6A5AE0"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#CBDCE6"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:strokeWidth="2dp">

                        <RadioButton
                            android:id="@+id/radio_btn_d"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="right|top"
                            android:layout_margin="2dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_add_answer_d"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/add"
                                android:text="C" />

                            <TextView
                                android:id="@+id/tv_answer_d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal|bottom"
                                android:text="Add Answer"
                                android:textColor="#6A5AE0"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_question"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#2E425A"
                android:text="Add"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>
