<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242A42"
    android:orientation="vertical"
    tools:context=".Login_SignUp_Option">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/onboaard_1" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:strokeWidth="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login or Sign Up"
                android:lineSpacingExtra="8sp"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="24sp"
                android:layout_margin="8dp"
                android:textColor="#001833"
                android:layout_gravity="center"
                android:textStyle="normal|bold"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="Login or create an account to take quiz, take part in challenge, and more."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="5sp"
                android:gravity="center_horizontal|center_vertical"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="#2E425A"
                android:layout_gravity="center"
                android:text="Sign In"
                app:cornerRadius="20dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:backgroundTint="#E6E6E6"
                android:layout_gravity="center"
                android:text="Create an account"
                android:textColor="#6A5AE0"
                app:cornerRadius="20dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:layout_margin="2dp"
                android:layout_gravity="center|bottom"
                android:backgroundTint="#CBDCE6"
                android:text="Later"
                app:cornerRadius="20dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>