<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#242A42"
        android:orientation="vertical"
        tools:context=".View.Login_SignUp_Option">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:src="@drawable/onboaard_1" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="90dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/take_part_in"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="8sp"
                    android:text="Take part in challenges with frends"
                    android:textColor="#001833"
                    android:textSize="24sp"
                    android:textStyle="normal|bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sign_in"
                    android:layout_width="284dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="#2E425A"
                    android:text="Sign In"
                    app:cornerRadius="20dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="8sp"
                    android:text="You don't have an account? Sign Up"
                    android:textColor="#001833"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>
