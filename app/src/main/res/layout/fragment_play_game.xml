<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="#242A42"
        tools:context=".View.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="22dp"
                android:layout_height="68dp"
                android:layout_gravity="start"
                android:src="@drawable/ic_back_img" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical|end"
                android:gravity="center_horizontal|center_vertical"
                android:text="Question"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#CBDCE6"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="2dp">
            <TextView
                android:id="@+id/tv_count_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="30sp"
                android:textColor="#9087E5"
                android:layout_gravity="start|center_vertical"
                android:textStyle="bold"
                android:text="0/0"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="75dp"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/alarm" />
            <TextView
                android:id="@+id/tv_countdown_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="30sp"
                android:textColor="#9087E5"
                android:layout_gravity="end"
                android:text="00:00"/>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="#242A42"
            tools:context=".View.HomeFragment">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Question"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_question_a"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#CBDCE6"
                android:textColor="#000000"
                android:text="A"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_question_b"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#CBDCE6"
                android:textColor="#000000"
                android:text="B"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_question_c"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#CBDCE6"
                android:textColor="#000000"
                android:text="C"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_question_d"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#CBDCE6"
                android:text="D"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </LinearLayout>
</layout>
