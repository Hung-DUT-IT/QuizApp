<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="#242A42"
        tools:context=".View.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="68dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_back_img" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical|right"
                android:gravity="center_horizontal|center_vertical"
                android:text="Question"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#CBDCE6"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="2dp">
            <TextView
                android:id="@+id/tv_count_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="30sp"
                android:textColor="#9087E5"
                android:layout_gravity="left|center_vertical"
                android:textStyle="bold"
                android:text="0"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/alarm" />
            <TextView
                android:id="@+id/tv_countdown_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="30sp"
                android:textColor="#9087E5"
                android:layout_gravity="right"
                android:text="00:00:00"/>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="380dp"
            android:layout_height="527dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#CBDCE6"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="2dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_question"
                android:layout_width="360dp"
                android:layout_height="510dp"
                android:layout_gravity="center|top"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp">

            </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_question"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#2E425A"
                android:text="Next"
                android:textSize="16dp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</layout>
