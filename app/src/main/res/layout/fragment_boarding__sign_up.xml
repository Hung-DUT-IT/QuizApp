<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#242A42"
    android:layout_gravity="center"
    tools:context=".View.Boarding_SignUp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:src="@drawable/onboard" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="130dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/take_part_in"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="8sp"
                android:text="Take part in challenges with frends"
                android:textColor="#001833"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="284dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#2E425A"
                android:text="Sign Up"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="8sp"
                android:text="Already have an account? Login"
                android:textColor="#001833"
                android:textSize="16sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>