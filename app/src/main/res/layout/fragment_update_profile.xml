<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="#242A42">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="68dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_back_img" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical|right"
                android:gravity="center_horizontal|center_vertical"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_register_hero" />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_gravity="center|bottom"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#E78230"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_label_count_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Quiz App"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal|italic" />

                <TextView
                    android:id="@+id/tx_count_question"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Count"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_side_bg_1" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_label_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Your Ranking"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal|italic" />

                <TextView
                    android:id="@+id/tx_rank"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Rank"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="350dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="#CBDCE6"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:elevation="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="36dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/img_icon_user"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user"/>

                <TextView
                    android:id="@+id/tv_name_user"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="name"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="350dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="#CBDCE6"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:elevation="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="36dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/img_icon_mail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="30dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/envelope"/>

                <TextView
                    android:id="@+id/tv_mail"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="mail"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>
