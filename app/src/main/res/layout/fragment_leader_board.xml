<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="#151729">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="68dp"
                android:layout_gravity="left"
                android:src="@drawable/ic_back_img" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical|right"
                android:gravity="center_horizontal|center_vertical"
                android:text="Leader Board"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold" />
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#CBDCE6"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="2dp">

            <ImageView
                android:id="@+id/img_user_top_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:src="@drawable/congulation" />
            <ImageView
                android:id="@+id/img_user_top_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginTop="45dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/congulation" />
            <ImageView
                android:id="@+id/img_user_top_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/congulation" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="185dp"
                android:layout_gravity="center|bottom"
                android:src="@drawable/board" />
            <TextView
                android:id="@+id/tx_username_top_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tx_username_top_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginTop="80dp"
                android:layout_marginRight="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tx_username_top_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:layout_gravity="center|bottom"
            android:layout_margin="30dp"
            app:cardBackgroundColor="#151729"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="2dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_gravity="center|top">
            </androidx.recyclerview.widget.RecyclerView>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>
