<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="#242A42"
        tools:context=".View.HomeFragment">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="18dp"
            android:layout_gravity="right"
            android:src="@drawable/close" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="380dp"
            android:layout_height="600dp"
            android:layout_gravity="center|bottom"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#CBDCE6"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:strokeWidth="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="225dp"
                    android:layout_height="225dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="25dp"
                    android:src="@drawable/congulation" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="Congrats !"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_sum_count_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="70 Score"
                    android:textColor="#4CAF50"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="Quiz completed successfullly."
                    android:textColor="#6A5AE0"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:lineSpacingExtra="5sp"
                    android:text="You try 60 questions within three minutes and answer 55 questions correctly"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>
